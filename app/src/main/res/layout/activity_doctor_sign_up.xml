<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registeration.Patient_SignUP_Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/appbarlayout_doctor_signup">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_doctor_signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightBlueA200"
            app:navigationIcon="@drawable/backarrow2"
            app:title="@string/doctor_signup"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/appbarlayout_doctor_signup"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Register As Doctor"
            android:textStyle="bold"
            android:textColor="@color/lightBlueA200"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_editText_profile_activity_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue50"
                android:hint="Name"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/age_editText_profile_activity_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue50"
                android:hint="Age"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_editText_profile_activity_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue50"
                android:hint="Phone no."
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_doctor_signUp_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue50"
                android:hint="User Email"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_doctor_signUp_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue50"
                android:hint="Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Re_enter_Password_doctor_signUp_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlue50"
                android:hint="Re-enter Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup_btn_doctor_signUp_activity"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/lightBlueA200"
            android:text="Sign Up"
            android:textColor="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progressBar_doctor_signUp_activity"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/lightBlueA200"
            android:visibility="invisible"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>