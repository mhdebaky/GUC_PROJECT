<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient.fragments.PatientProfileFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray50"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/lightBlueA200"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="40dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/patient_image_view"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:contentDescription="doctor-img"
                    android:src="@drawable/male_profile_pic"
                    app:civ_border_color="#0D2DCA"
                    app:civ_border_width="2dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#4359D4"
                    app:civ_shadow_radius="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/patient_edit_image_pic"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="140dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/edit_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/patient_image_view"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/patient_profile_edit_text_name_of_patient"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:inputType="textNoSuggestions"
                android:text="Mohamed Hazem"
                android:textColor="@color/white"
                android:textSize="23dp" />
            <!--                <androidx.appcompat.widget.AppCompatButton-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:background="@color/lightblueA400"-->
            <!--                    android:textColor="@color/greyWhite"-->
            <!--                    android:text="edit"-->
            <!--                    android:layout_gravity="center"-->
            <!--                    android:shadowColor="@color/lightblueA400"/>-->
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="95dp"
            android:layout_marginTop="240dp"
            android:layout_centerHorizontal="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/bluegray300"
                        android:layout_gravity="center"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/patient_profile_edit_text_age"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_300"
                        android:layout_gravity="center"
                        android:background="@null"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/bluegray300"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/patient_profile_edit_text_user_type"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="patient"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_300"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="360dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/mail_icon"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/patient_profile_edit_text_mail"
                    android:layout_marginLeft="50dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="mhdebaky@gmail.com"
                    android:textColor="@color/bluegray400"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/phone_icon"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/patient_profile_edit_text_phone"
                    android:layout_marginLeft="50dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="01095929901"
                    android:textColor="@color/bluegray400"
                    android:background="@null"
                    />
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/patient_profile_button_to_edit"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="@color/lightBlueA200"
            android:text="Edit"
            android:textColor="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/patient_profile_call"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="95dp"
            android:layout_height="70dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="@color/lightBlueA200"
            android:text="Call"
            android:textColor="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />

    </RelativeLayout>


</FrameLayout>