<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".patient.fragments.PatientAddRequestFragment"
    android:id="@+id/patient_request_add_framelayout">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightBlue50"
        android:orientation="vertical"
        android:padding="20dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        app:contentPadding="23dp"
        app:cardBackgroundColor="@color/lightblue100"
        app:cardCornerRadius="23dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:text="Request Info"
            android:textColor="@color/lightblueA400"
            android:textStyle="bold"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/patient_request_input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightblue100"
                android:inputType="textMultiLine"
                android:maxLines="14"
                android:textColor="@color/teal_300"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/patient_add_request_button"
            android:layout_marginTop="23dp"
            android:layout_width="120dp"
            android:layout_height="65dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:text="add request"
            android:textSize="16dp"
            android:layout_gravity="right"
            android:backgroundTint="@color/lightblueA400"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/blur_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.5">
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/patient_add_request_progressbar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="25dp"
            android:indeterminate="true"
            android:layout_gravity="center_vertical"
            android:indeterminateTint="@color/lightBlueA200"
            android:indeterminateTintMode="src_atop"
            android:visibility="invisible" />
    </LinearLayout>
</FrameLayout>