<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start_Up_Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bestdoctor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView1"
            android:layout_width="345dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/iconlogo"
            android:text="DBK Hospitals"
            android:textColor="@color/bluelogo"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="160sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeStepGranularity="20dp"
            app:autoSizeTextType="uniform" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="center"
            android:padding="25sp"
            android:text="Your Health Is Our Concern"
            android:textColor="@color/bluelogo"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="120sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeStepGranularity="40sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>



</RelativeLayout>